<!DOCTYPE html>
<html>
  <%- include('./components/header'); -%>
  <link rel='stylesheet' href='/stylesheets/form.css' />
  <body>
    <div id="root">
      <%- include('./components/nav'); -%>
      <div class='position-absolute fixed-top d-flex flex-column min-vh-100 justify-content-center align-items-center' style="z-index: 0;">
        <form id='form' class="d-flex flex-column shadow p-3 mb-5 bg-white rounded">
          <p class="text-center font-weight-bold" style="font-size: 18px;">Let's get the party started 🥳</p>
          <!-- name -->
          <div class="form-group">
            <label for="name">😇 your name: </label>
            <input type="text" class="form-control form-control-sm" id="name">
          </div>
          <!-- email -->
          <div class="form-group">
            <label for="email">😇 your email: </label>
            <input type="email" class="form-control form-control-sm" id="email" aria-describedby="emailHelp">
          </div>
          <!-- password -->
          <div class="form-group">
            <label for="password">😇 enter a password: </label>
            <input type="password" class="form-control form-control-sm" id="password">
          </div>
          <!-- confirm password -->
          <div class="form-group">
            <label for="cpassword">😇 comfirm password: </label>
            <input type="password" class="form-control form-control-sm" id="cpassword">
          </div>
          <!-- bio -->
          <div class="form-group">
            <label for="bio">😇 tell us about yourself:</label>
            <textarea class="form-control form-control-sm" id="bio" rows="2"></textarea>
          </div>
          <div class="d-flex justify-content-center align-items-center">
            <button type="submit" class="btn btn-outline-success">🎉 register!</button>
          </div>
        </form>
      </div>
    </div>
  </body>
  <%- include('./components/scripts'); -%>
</html>